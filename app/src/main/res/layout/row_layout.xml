<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="5">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/first"
                  android:layout_weight="2"
                  android:gravity="start" android:layout_gravity="center_vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="07"
                android:id="@+id/day"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:maxLines="1" android:gravity="center"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AĞUSTOS"
                android:id="@+id/month"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:maxLines="1" android:gravity="center"/>
    </LinearLayout>

    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:id="@+id/line"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="5dp"
                  android:orientation="vertical"
                  android:id="@+id/second"
                  android:layout_weight="1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza Hut"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:paddingTop="5dp"

                android:maxLines="1"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingridient"
                android:text="Orta Boy Karışık"
                android:paddingTop="5dp"
                android:textColor="@color/black"

                android:maxLines="1"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:paddingTop="3dp"
                      android:paddingBottom="3dp"
                      android:paddingRight="15dp"
                      android:id="@+id/stateborder"
                      android:background="@drawable/greenborder">
            <View android:layout_width="15dp"
                  android:layout_height="15dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/square"
                  android:background="@drawable/rectangle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/state"
                android:text="Hazırlanıyor"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/third"
                  android:layout_weight="2"
                  android:layout_alignParentTop="false"
                  android:layout_gravity="center_vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">"
                android:id="@+id/arrow"
                android:textSize="10pt"
                android:gravity="end"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:text="25.5 TL"
                android:textColor="@color/black"
                android:gravity="end"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>
    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/gray"
                  android:weightSum="5">
        <LinearLayout android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                      android:layout_weight="4" >

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/detail"
                      android:orientation="vertical">
            <LinearLayout android:layout_marginTop="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:text="Orta Boy Karisik"
                          android:id="@+id/summary"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="1414.10₺"
                          android:id="@+id/summaryprice"
                          android:gravity="end"
                          android:textColor="@color/black"
                />


            </LinearLayout>


            <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>